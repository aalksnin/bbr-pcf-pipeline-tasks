#!/usr/bin/env bash

shopt -s expand_aliases

skip_ssl=${SKIP_SSL_VALIDATION:-false}
skip_ssl_flag=""

if ${skip_ssl}; then
    skip_ssl_flag="--skip-ssl-validation"
fi

alias om_cmd='om ${skip_ssl_flag} --target "${OPSMAN_URL}" --client-id "${OPSMAN_USERNAME}" --client-secret "${OPSMAN_PASSWORD}"'
